<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "org/apache/ibatis/builder/xml/mybatis-3-mapper.dtd">
    <mapper resource="com.solvd.university.dao.ITitleDAO">
        <resultMap type="com.solvd.university.bin.Title"
               id="TitleResultMap" automapping="false">
            <id column="id" property="id"/>
            <result column="schoolId" property="schoolId"/>
            <result column="name" property="name"/>
        </resultMap>

            <select id="getEntityById">
                SELECT * WHERE ID like #{id}
            </select>

            <insert id="saveEntity">
                insert values(null, #{schoolId}, #{name})
            </insert>

            <delete id="removeEntity" parameterType="int">
                delete * where id = #{id}
            </delete>
    
            <update id="updateEntity">
                update * set schoolId = #{schoolId}, name = #{name} where id = #{id}
            </update>
    </mapper>